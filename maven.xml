<project default="jar" xmlns:ant="jelly:ant" xmlns:j="jelly:core" xmlns:deploy="deploy" xmlns:velocity="jelly:org.apache.commons.jelly.tags.velocity.VelocityTagLibrary">

  <!-- Process the xdoc templates. -->
  <preGoal name="site">
    <attainGoal name="site-template"/>
  </preGoal>

  <goal name="site-template">
    <velocity:merge name="${basedir}/xdocs/navigation.xml" basedir="${basedir}/templates" template="navigation.xml"/>
    <velocity:merge name="${basedir}/xdocs/install/index.xml" basedir="${basedir}/templates" template="index-install.xml"/>
  </goal>

  <!-- Generate a PDF of the online documentation. -->
  <postGoal name="site">
    <attainGoal name="pdf"/>
  </postGoal>

  <!-- Include the dependencies and README file in the binary distribution. -->
  <postGoal name="dist:prepare-bin-filesystem">
    <ant:copy tofile="${maven.dist.bin.assembly.dir}/README.txt"
              file="${basedir}/README-BINARY.txt"/>
    <ant:mkdir dir="${maven.dist.bin.assembly.dir}/lib"/>
    <deploy:copy-deps todir="${maven.dist.bin.assembly.dir}/lib"/>
    <ant:move todir="${maven.dist.bin.assembly.dir}/lib"
              file="${maven.dist.bin.assembly.dir}/${maven.final.name}.jar"/>
  </postGoal>

  <!-- Include the README file in the source distribution. -->
  <postGoal name="dist:prepare-src-filesystem">
    <ant:copy tofile="${maven.dist.src.assembly.dir}/README.txt"
              file="${basedir}/README-SOURCE.txt"/>
  </postGoal>

  <!-- Clean up the files that were generated from templates. -->
  <postGoal name='clean:clean'>
    <delete file='${maven.docs.src}/navigation.xml' failonerror='false'/>
    <delete file='${maven.docs.src}/install/index.xml' failonerror='false'/>
  </postGoal>
</project>

