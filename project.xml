<project>
    <extend>${defaults.xml}</extend>
    <id>pds-tools</id>
    <name>PDS Tools</name>
    <currentVersion>0.0.0</currentVersion>
    <package>gov.nasa.jpl.pds.tools</package>
    <shortDescription>
      Next generation of PDS tools.
    </shortDescription>
    <description>
      This package provides the next generation lvtool. These set of tools will focus on being component-based.
    </description>
    <developers>
        <developer>
            <name>Sean Hardman</name>
            <id>shardman</id>
            <email>Sean.Hardman@jpl.nasa.gov</email>
            <organization>Jet Propulsion Laboratory</organization>
            <roles>
                <role>Project Lead</role>
            </roles>
        </developer>   
        <developer>
            <name>Paul Ramirez</name>
            <id>pramirez</id>
            <email>Paul.Ramirez@jpl.nasa.gov</email>
            <organization>Jet Propulsion Laboratory</organization>
            <roles>
                <role>Lead Developer</role>
            </roles>
        </developer>
        <developer>
            <name>Michael Cayanan</name>
            <id>mcayanan</id>
            <email>Michael.Cayanan@jpl.nasa.gov</email>
            <organization>Jet Propulsion Laboratory</organization>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>
            <version>1.0</version>
            <url>http://www.ibiblio.org/maven/</url>
        </dependency>
        <dependency>
            <groupId>antlr</groupId>
            <artifactId>antlr</artifactId>
            <version>2.7.6</version>
            <url>http://www.ibiblio.org/maven/</url>
        </dependency> 
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.13</version>
            <url>http://www.ibiblio.org/maven/</url>
        </dependency>
    </dependencies>
    <build>
        <nagEmailAddress>paul.ramirez@jpl.nasa.gov</nagEmailAddress>
        <sourceDirectory>${basedir}/src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
        <resources/>
        <unitTest>
	      <includes>
	        <include>**/*Test*.java</include>
	      </includes>
        </unitTest>
    </build>
    <properties/>
</project>
